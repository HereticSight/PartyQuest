<%= form_for @campaign do |f| %>
  <%= render partial: 'shared/errors', locals: {errors: @errors} %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :start_time %>
    <%= f.datetime_local_field :start_time %>
  </p>

  <p>
    <%= f.label :end_time %>
    <%= f.datetime_local_field :end_time %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
