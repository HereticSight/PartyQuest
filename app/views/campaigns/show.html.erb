<div class="main_container">
  <h1><%= @campaign.name %></h1>
    <small>Start time: <%= @campaign.start_time.strftime("%B %d, %Y %I:%M %p") %></small><br>
    <small>End time: <%= @campaign.end_time.strftime("%B %d, %Y %I:%M %p") %></small>
  <% if @current_user %>
    <% if @current_user.id == @campaign.leader_id %>
      <div class="leader_options">
        <%=link_to "edit campaign", edit_campaign_path(@campaign)%> | <%=link_to "delete campaign", @campaign, method: :delete, data: { confirm: "Are you sure you want to delete this campaign?" }%>
      </div>
    <% end %>
  <% end %>
  <% if current_user?(@campaign.leader) || @campaign.users.include?(@current_user) %>
    <div class="invitation_link">
      <h2>Invitation Link:</h2> <%= @campaign.invite_link %>
    </div>
  <% end %>
  <h2>Location</h2>
      <%= @campaign.location.address %><br>
      <%= @campaign.location.city %>, <%= @campaign.location.state %>
  <h2>Quests</h2>
    <ul>
      <% if @quests %>
        <% @quests.each do |quest| %>
         <li>
            Quest: <%= quest.name %><br>
            Description: <%= quest.description %><br>
            Price Range: <%= quest.price_range %><br>
            <% if @current_user == @campaign.leader %>
              <%= link_to "Delete this quest", campaign_quest_path(@campaign, quest),
                method: :delete,
                data: { confirm: "Are you sure you want to delete this quest?" } %>
            <% end %>
         </li>
       <% end %>
      <% end %>
    </ul>
    <% if current_user?(@campaign.leader) %>
      <%= link_to "Add a quest to this campaign!", new_campaign_quest_path(@campaign) %>
    <% end %>
  <h2>Guests</h2>
  <div class="campaign_guests">
    <% if @users %>
      <%= @users.each do |user| %>
        <div class="guest_info">
          <%= link_to user.username, user_path(user) %>
          <%= user.avatar %>
        </div>
      <% end %>
    <% else %>
      <h4>No guests currently.</h4>
    <% end %>
  </div>
</div>
