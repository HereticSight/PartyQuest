<div class="main_container">
  <h1><%= @campaign.name %></h1>
  <% if @user.id == @campaign.leader_id %>
    <div class-"button"><%=link_to "edit campaign", edit_campaign_path(@campaign)%></div>
    <div class-"button"><%=link_to "delete campaign", @campaign, method: :delete, data: { confirm: "Are you sure you want to delete this campaign?" }%></div>
  <% end %>
  <div class="invitation_link">
    <h1>Invitation Link:</h1> <%= @campaign.invite_link %>
  </div>
  <h2>Guests</h2>
  <div class="campaign_guests">
    <% if @users %>
      <%= @users.each do |user| %>
        <div class="guest_info">
          <%= link_to user.username, user_path(user) %>
          <%= user.avatar %>
        </div>
      <% end %>
    <% else %>
      <h2>No guests currently.</h2>
    <% end %>
  </div>
</div>
