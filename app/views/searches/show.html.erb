<% if @users.empty? && @campaigns.empty? && @location_campaigns.empty? %>
 <h2>Sorry, your search returned no results</h2>
<% else %>
  <% unless @users.empty? %>
    <h3 class="category">Users</h3>
      <ul class="list-group">
        <% @users.each do |user| %>
          <li class="list-group-item"><%= link_to user.username, user_path(user) %></li>
        <% end %>
      </ul>
  <% end %>
  <% unless @location_campaigns.empty? && @campaigns.empty? %>
    <h3 class="category">Related Campaigns</h3>
      <ul class="list-group">
        <% @campaigns.each do |campaign| %>
          <li class="list-group-item"><%= link_to campaign.name, campaign_path(campaign) %></li>
        <% end %>
        <% @location_campaigns.each do |location_campaign| %>
          <li class="list-group-item"><%= link_to location_campaign.name, campaign_path(location_campaign) %></li>
        <% end %>
      </ul>
  <% end %>
<% end %>
