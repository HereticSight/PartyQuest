<div class="main_container">
  <% if @users.empty? && @campaigns.empty? && @location_campaigns.empty? %>
   <h2>Sorry, your search returned no results</h2>
  <% else %>
   <% unless @users.empty? %>
      <h3 class="category">Users</h3>
      <div>
        <% @users.each do |user| %>
        <li><%= link_to user.username, user_path(user) %></li>
       <% end %>
      </div>
    <% end %>
    <% unless @location_campaigns.empty? && @campaigns.empty? %>
      <h3 class="category">Related Campaigns</h3>
       <% @campaigns.each do |campaign| %>
          <li><%= link_to campaign.name, campaign_path(campaign) %></li>
       <% end %>
       <% @location_campaigns.each do |location_campaign| %>
         <li><%= link_to location_campaign.name, campaign_path(location_campaign) %></li>
      <% end %>
    <% end %>
  <% end %>
</div>
