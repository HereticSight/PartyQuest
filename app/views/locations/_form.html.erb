<%= form_for [@campaign, @location] do |f| %>
  <%= render partial: 'shared/errors', locals: {errors: @errors} %>
  <p>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </p>

  <p>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </p>

  <p>
    <%= f.label :state %>
    <%= f.select :state, options_for_state, prompt: "State" %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
