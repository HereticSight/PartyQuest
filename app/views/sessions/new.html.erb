<h1>Log in</h1>
  <%= form_for(:session, url: login_path) do |f| %>
    <%= render partial: 'shared/errors', locals: {errors: @errors} %>
    <p>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </p>

    <p>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </p>

    <p>
      <%= f.submit "Log in" %>
    </p>

  <% end %>


  <p>
    Don't have an account? <%= link_to "Sign up here!", new_user_path %>
  </p>
