<h1>Add a new picture to your campaign!</h1>
  <%= form_for([@campaign, @picture]) do |f| %>
    <%= render partial: 'shared/errors', locals: {errors: @errors} %>

  <div class="form-group">
    <%= f.file_field :image, class: "form-control" %>
  </div>

    <div class="form-group">
      <%= f.submit "Add this picture!", class: "btn btn-default" %>
    </div>

  <% end %>
