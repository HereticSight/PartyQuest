<!DOCTYPE html>
<html>
<head>
  <title>Party Quest</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCkUOdZ5y7hMm0yrcCQoCvLwzdM6M8s5qk&&libraries=places&callback=initMap" async defer></script>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <header>
        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar top-bar"></span>
                <span class="icon-bar middle-bar"></span>
                <span class="icon-bar bottom-bar"></span>
              </button>
              <a class="navbar-brand" href="/">Party Quest</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
              <ul class="nav navbar-nav navbar-right">
                <li class="active"><a href="/">Home</a></li>
                <li><a href="#">About</a></li>
                <li><a href="#">Contact</a></li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Account <span class="caret"></span></a>
                  <% if @current_user %>
                    <ul class="dropdown-menu" role="menu">
                      <li><a href='<%= user_path @current_user %>'>Profile</a></li>
                      <li><a href="#">Campaigns</a></li>
                      <li><a href="#">Quests</a></li>
                      <li class="divider"></li>
                      <li><a href="<%= logout_path %>">Log out</a></li>
                    </ul>
                  <% else %>
                    <ul class="dropdown-menu" role="menu">
                      <li><a href="<%= new_user_path %>">Sign Up</a></li>
                      <li><a href="<%= login_path %>">Log In</a></li>
                    </ul>
                  <% end %>
                </li>
                </ul>
              </div>
          </div>
        </nav>
    </header>
    <%= yield %>
  </div>
</body>
</html>
