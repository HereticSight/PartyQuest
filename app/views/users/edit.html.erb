  <h1>Edit your Profile</h1>

    <%= form_for @user do |f| %>
      <%= render partial: 'shared/errors', locals: {errors: @errors} %>

      <div class="row">
        <div class="form-group col-sm-6">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
        <div class="form-group col-sm-6">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-sm-6">
          <%= f.label :username %><br>
          <%= f.text_field :username, class: "form-control" %>
        </div>
        <div class="form-group col-sm-6">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :bio %>
        <%= f.text_area :bio, cols: 40, rows: 5, value: @user.bio, class: "form-control" %>
      </div>

      <div class="row">
        <div class="form-group col-sm-6">
          <%= f.label :city %>
          <%= f.text_field :city, class: "form-control" %>
        </div>
        <div class="form-group col-sm-6">
          <%= f.label :state %>
          <%= f.select :state, options_for_state, {}, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :avatar %>
        <%= f.file_field :avatar, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Edit", class: "btn btn-default" %>
      </div>
    <% end %>
