<%= form_for @user do |f| %>
  <%= render partial: 'shared/errors', locals: {errors: @errors} %>

  <p>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, value: @user.first_name %>
  </p>

  <p>
    <%= f.label :last_name %>
    <%= f.text_field :last_name, value: @user.last_name %>
  </p>

  <p>
    <%= f.label :username %><br>
    <%= f.text_field :username, value: @user.username %>
  </p>

  <p>
    <%= f.label :email %>
    <%= f.email_field :email, value: @user.email %>
  </p>

  <!-- add something here for profile_img??? -->

  <p>
    <%= f.label :bio %>
    <%= f.text_area :bio, cols: 40, rows: 5, value: @user.bio %>
  </p>

  <p>
    <%= f.label :state %>
    <%= f.select :state, options_for_state, value: @user.state  %>
  </p>

  <p>
    <%= f.label :city %>
    <%= f.text_field :city, value: @user.city %>
  </p>

  <p>
    <%= f.submit "Start your Quest!" %>
  </p>

<% end %>
