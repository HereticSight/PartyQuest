<%= form_for @user do |f| %>
  <%= render partial: 'shared/errors', locals: {errors: @errors} %>

  <p>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </p>

  <p>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </p>

  <p>
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </p>

  <p>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </p>

  <!-- add something here for profile_img??? -->

  <p>
    <%= f.label :bio %>
    <%= f.text_area :bio, cols: 40, rows: 5, placeholder: "Tell us about yourself!" %>
  </p>

  <p>
    <%= f.label :state %>
    <%= f.select :state, options_for_state, prompt: "State" %>
  </p>

  <p>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </p>

  <p>
    <%= f.submit "Start your Quest!" %>
  </p>

<% end %>
