<h1><%= @user.username %></h1>
  <p>
    <%= @user.first_name %> <%= @user.last_name %>
  </p>

  <p>
    <%= image_tag @user.avatar.url(:square) %>
  </p>

  <p>
    <h4>Contact:</h4> <%= @user.email %>
  </p>

  <p>
    <h4>Bio:</h4> <%= @user.bio %>
  </p>

  <p>
    <h4>City:</h4> <%= @user.city %>
  </p>

  <p>
    <h4>Campaigns:</h4>
    <ul>
      <% @user.campaigns.each do |campaign| %>
        <li><%= link_to campaign.name, campaign %></li>
      <% end %>
    </ul>
  </p>

  <p>
    <h4>Quests undertaken:</h4>
      <ul>
        <% @user.quests.each do |quest| %>
          <li>
            <%= quest.name %><br>
            Description: <%= quest.description %><br>
            <% price = "" %>
            <% quest.price_range.times do %>
              <% price += "$" %>
            <% end %>
            Price Range: <%= price %>
          </li>
        <% end %>
      </ul>
  </p>

  <p>
    <% if current_user?(@user) %>
      <%= link_to "Edit your profile", edit_user_path(@user) %>
      <%= link_to "Delete your profile", user_path(@user),
          method: :delete,
          data: { confirm: "Are you sure you want to delete your profile?" } %>
    <% end %>
  </p>
