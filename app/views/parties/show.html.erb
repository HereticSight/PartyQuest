<div class="main_container">
  <h1><%= @party.name %></h1>
  <% if @user.id == @party.leader_id %>
    <div class-"button"><%=link_to "edit party", edit_party_path(@party)%></div>
    <div class-"button"><%=link_to "delete party", @party, method: :delete, data: { confirm: "Are you sure you want to delete this party?" }%></div>
  <% end %>
  <div class="invitation_link">
    <h1>Invitation Link:</h1> <%= @party.invite_link %>
  </div>
  <h2>Guests</h2>
  <div class="party_guests">
    <% if @users %>
      <%= @users.each do |user| %>
        <div class="guest_info">
          <%= link_to user.username, user_path(user) %>
          <%= user.avatar %>
        </div>
      <% end %>
    <% else %>
      <h2>No guests currently.</h2>
    <% end %>
  </div>
</div>
